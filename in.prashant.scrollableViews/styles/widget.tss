"#pagerContainer": {
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
}

"#PAGING_VIEW": {
   width: Ti.UI.SIZE,
   layout: "horizontal",
   height: Ti.UI.SIZE,
   horizontalWrap: false
}

"#pagerControl": {
    width: 12,
    height: 12,
    borderRadius: 6,
    borderWidth: 7,
    touchEnabled: false
}

"#SCROLLABLE_VIEW" : {
	disableBounce : true,
	showPagingControl : false
}

"#scrollView": {
   left: 15,
   right: 15,
   height: Ti.UI.SIZE,
   scrollType: 'horizontal',
   disableBounce: true
}

"#backdropViews" : {
	width : Titanium.UI.FILL,
	height : Titanium.UI.FILL
}
